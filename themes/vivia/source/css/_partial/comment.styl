// Gitalk GitHub 风格 UI 设计 - 强制覆盖所有默认样式

.gt-container
  color: var(--neut-L90) !important
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif !important
  background-color: transparent !important

  // 头部输入区域
  .gt-header
    border: 1px solid var(--neut-L10) !important
    border-radius: 6px !important
    padding: 16px !important
    background-color: var(--card-background) !important
    margin-bottom: 16px !important
    display: flex !important
    gap: 12px !important

  // 输入框
  .gt-header-textarea
    background-color: var(--input-field) !important
    color: var(--neut-L90) !important
    border: 1px solid var(--neut-L10) !important
    border-radius: 6px !important
    padding: 12px !important
    font-size: 14px !important
    line-height: 1.5 !important
    min-height: 100px !important

    &:focus
      border-color: var(--primary) !important
      outline: none !important
      box-shadow: 0 0 0 3px var(--link-hover-bg) !important

  // 预览区域
  .gt-header-preview
    background-color: var(--input-field) !important
    color: var(--neut-L90) !important
    border: 1px solid var(--neut-L10) !important
    border-radius: 6px !important
    padding: 12px !important

  // 按钮基础样式
  .gt-btn
    border-radius: 6px !important
    font-size: 14px !important
    font-weight: 500 !important
    padding: 6px 12px !important
    border: 1px solid var(--neut-L10) !important
    background-color: var(--btn-bg) !important
    color: var(--btn-content) !important
    cursor: pointer !important
    transition: all 0.2s ease !important

    &:hover
      background-color: var(--btn-hover) !important

  // 登录按钮 - GitHub 绿色
  .gt-btn-login
    background-color: #2da44e !important
    color: white !important
    border-color: rgba(27, 31, 36, 0.15) !important

    &:hover
      background-color: #2c974b !important

  // 发表评论按钮 - GitHub 绿色
  .gt-btn-public
    background-color: #2da44e !important
    color: white !important
    border-color: rgba(27, 31, 36, 0.15) !important

    &:hover
      background-color: #2c974b !important

  // 评论列表
  .gt-comments
    margin-top: 0 !important

  // 单条评论 - 带边框卡片
  .gt-comment
    border: 1px solid var(--neut-L10) !important
    border-radius: 6px !important
    padding: 12px 16px !important
    background-color: var(--card-background) !important
    margin-bottom: 16px !important
    display: flex !important
    gap: 7px !important

    &:last-child
      margin-bottom: 0 !important

    &:hover
      background-color: var(--card-background) !important

    // 移除点击高亮
    &:active
      background-color: var(--card-background) !important

  // 评论内容区域
  .gt-comment-content
    background-color: transparent !important
    box-shadow: none !important
    margin-left: 0 !important
    flex-grow: 1 !important
    flex-shrink: 1 !important
    flex-basis: 0 !important
    min-width: 0 !important

    // 移除内容区域的高亮
    &:hover
      background-color: transparent !important

  // 评论头像 - 放大到 56px
  .gt-comment-avatar
    width: 56px !important
    height: 56px !important
    flex-shrink: 0 !important

    img
      width: 56px !important
      height: 56px !important
      border-radius: 8px !important

  // 评论头部 - 所有元素在同一行对齐
  .gt-comment-header
    color: var(--neut-L75) !important
    font-size: 14px !important
    margin-bottom: 4px !important
    display: flex !important
    align-items: baseline !important
    gap: 4px !important
    flex-wrap: nowrap !important
    line-height: 1.5 !important

  // 用户名
  .gt-comment-username
    color: var(--neut-L90) !important
    font-weight: 600 !important
    text-decoration: none !important
    font-size: 14px !important
    line-height: 1.5 !important

    &:hover
      color: var(--primary) !important

  // 隐藏小蓝块
  .gt-comment-block-1
  .gt-comment-block-2
    display: none !important

  // 发表于文字
  .gt-comment-text
    color: var(--neut-L50) !important
    font-size: 14px !important
    line-height: 1.5 !important

  // 日期
  .gt-comment-date
    color: var(--neut-L50) !important
    font-size: 14px !important
    line-height: 1.5 !important

  // 评论正文 - 强制所有文字颜色
  .gt-comment-body
    color: var(--neut-L90) !important
    font-size: 14px !important
    line-height: 1.6 !important

    p
      color: var(--neut-L90) !important
      margin: 0 0 8px 0 !important

      &:last-child
        margin-bottom: 0 !important

    h1, h2, h3, h4, h5, h6
      color: var(--neut-L90) !important

    ul, ol
      color: var(--neut-L90) !important

    li
      color: var(--neut-L90) !important

    strong, b
      color: var(--neut-L90) !important

    code
      background-color: var(--article-code-bg) !important
      color: var(--neut-L90) !important
      padding: 2px 6px !important
      border-radius: 3px !important
      font-size: 85% !important

    pre
      background-color: var(--article-block) !important
      color: var(--neut-L90) !important
      padding: 16px !important
      border-radius: 6px !important
      overflow-x: auto !important

    blockquote
      border-left: 4px solid var(--neut-L10) !important
      padding-left: 16px !important
      margin-left: 0 !important
      color: var(--neut-L75) !important

    img
      max-width: 100% !important
      border-radius: 6px !important

    a
      color: var(--link) !important
      text-decoration: none !important

      &:hover
        text-decoration: underline !important

  // 操作按钮区域
  .gt-comment-footer
    margin-top: 12px !important
    display: flex !important
    align-items: center !important
    gap: 8px !important

  // 操作按钮
  .gt-comment-edit
  .gt-comment-reply
  .gt-comment-like
    color: var(--neut-L50) !important
    font-size: 12px !important
    background: transparent !important
    border: none !important
    padding: 4px 8px !important
    border-radius: 6px !important
    display: inline-flex !important
    align-items: center !important
    gap: 4px !important

    &:hover
      color: var(--primary) !important
      background-color: var(--btn-text-hover) !important

  // 楼中楼
  .gt-comment-replies
    margin-top: 16px !important
    margin-left: 0 !important
    padding-left: 16px !important
    border-left: 2px solid var(--neut-L10) !important

    .gt-comment
      border-bottom: none !important
      padding: 12px 0 !important

      &:first-child
        padding-top: 0 !important

      &:last-child
        padding-bottom: 0 !important

  // 链接
  .gt-link
    color: var(--link) !important
    text-decoration: none !important

    &:hover
      text-decoration: underline !important

  // 弹出层
  .gt-popup
    background-color: var(--card-background) !important
    border: 1px solid var(--neut-L10) !important
    border-radius: 6px !important
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2) !important

  // 版权信息
  .gt-copyright
    color: var(--neut-L50) !important
    font-size: 12px !important
    margin-top: 24px !important
    padding-top: 16px !important
    border-top: 1px solid var(--neut-L10) !important
    text-align: center !important

  // 加载状态
  .gt-loading
    color: var(--neut-L75) !important

  // 未初始化状态
  .gt-no-init
    background-color: var(--card-background) !important
    border: 1px solid var(--neut-L10) !important
    border-radius: 6px !important
    padding: 32px !important
    text-align: center !important

  // 错误提示
  .gt-error
    color: #cf222e !important
    background-color: rgba(207, 34, 46, 0.1) !important
    border: 1px solid rgba(207, 34, 46, 0.2) !important
    border-radius: 6px !important
    padding: 16px !important

  // 元信息
  .gt-meta
    margin-bottom: 16px !important

  .gt-counts
    color: var(--neut-L75) !important
    font-size: 14px !important

  // 分页
  .gt-pagination
    margin-top: 24px !important
    display: flex !important
    justify-content: center !important
    gap: 4px !important

    .gt-btn-page
      min-width: 32px !important
      height: 32px !important
      padding: 0 !important
      display: flex !important
      align-items: center !important
      justify-content: center !important
      border-radius: 6px !important

    .gt-btn-page.gt-current
      background-color: var(--primary) !important
      color: white !important
      border-color: transparent !important

  // 表情选择器
  .gt-emoji-picker
    background-color: var(--card-background) !important
    border: 1px solid var(--neut-L10) !important
    border-radius: 6px !important

  .gt-emoji-picker-item
    border-radius: 4px !important

    &:hover
      background-color: var(--btn-text-hover) !important

  // SVG 图标
  .gt-svg svg
    fill: currentColor !important

  // 头像
  .gt-avatar img
    border-radius: 6px !important

  // 头部头像 - 放大到 56px
  .gt-header-avatar
    width: 56px !important
    height: 56px !important

    img
      width: 56px !important
      height: 56px !important
      border-radius: 8px !important

  // 占位符颜色
  .gt-header-textarea::placeholder
    color: var(--neut-L30) !important

  // 隐藏 Markdown 提示
  .gt-header-controls-tip
    display: none !important

  // 标签页
  .gt-header-controls
    margin-bottom: 8px !important
